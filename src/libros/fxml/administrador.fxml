<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="BPAdmin" prefHeight="200" prefWidth="320" >

    <top>
        <MenuBar prefHeight="60">
            <menus>
                <Menu fx:id="menuIcon">
                    <graphic>
                        <FontAwesomeIconView glyphName="BOOK" glyphSize="40" fill="oldlace">
                        </FontAwesomeIconView>
                    </graphic>
                </Menu>

                <Menu text="Usuario:" fx:id="menuUsuario">
                </Menu>

                <Menu text="Perfil" fx:id="menuPerfil">
                    <items>
                        <MenuItem  fx:id="itemPerfil" text="Editar perfil" />
                    </items>
                </Menu>

                <Menu text="Registro" fx:id="menuRegistro">
                    <items>
                        <MenuItem  fx:id="itemRegistro" text="Nuevo Registro" />
                    </items>
                </Menu>

                <Menu>
                    <graphic>
                        <FontAwesomeIconView glyphName="REORDER" glyphSize="15" fill="orange">

                        </FontAwesomeIconView>
                    </graphic>
                    <items>
                        <MenuItem text="Manual" fx:id="itemManual"/>
                        <MenuItem text="Acerca de"  fx:id="itemAcercaDe"/>
                        <MenuItem text="Ayuda" fx:id="itemAyuda" />
                    </items>
                </Menu>

                <Menu text="Sesión" fx:id="menuSesion">
                    <items>
                        <MenuItem text="Cerrar sesión" fx:id="itemSesion"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <left>
        <ScrollPane>
            <VBox alignment="CENTER" >
                <Label  alignment="CENTER" text="Categorías" style="-fx-background-color:#FA9C76; -fx-text-fill: #060606; -fx-font-size: 16pt;" prefWidth="270" prefHeight="40"/>
                <Button text="Ciencia" fx:id="btnCiencia" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="FLASK" glyphSize="30" fill="darkorange" />
                    </graphic>
                </Button>
                <Button text="Comics" fx:id="btnComics" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="SMILE_ALT" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Computación" fx:id="btnComputacion" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="FILE_CODE_ALT" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Novelas" fx:id="btnNovelas" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="HEART" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Lengua y literatura" fx:id="btnLengua" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="WECHAT" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Geografía" fx:id="btnGeografia" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="GLOBE" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Música" fx:id="btnMusica" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="MUSIC" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Tecnología" fx:id="btnTecnologia" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="JOOMLA" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Negocios y economía" fx:id="btnNegocios" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="MONEY" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Cocina y comida" fx:id="btnCocina" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="CUTLERY" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Drama" fx:id="btnDrama" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="FROWN_ALT" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Salud y bienestar" fx:id="btnSalud" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="MEDKIT" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Ciencias políticas" fx:id="btnPolitica" prefWidth="270">
                    <graphic>
                        <FontAwesomeIconView glyphName="CHILD" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Leyes" fx:id="btnLeyes" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="GAVEL" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Historia" fx:id="btnHistoria" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="BANK" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Matemáticas" fx:id="btnMatematicas" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="CUBES" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
                <Button text="Medicina" fx:id="btnMedicina" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="USER_MD" glyphSize="30" fill="darkorange" />
                    </graphic>
                </Button>
                <Button text="Fotografía" fx:id="btnFotografia" prefWidth="270" contentDisplay="LEFT">
                    <graphic>
                        <FontAwesomeIconView glyphName="CAMERA" glyphSize="30" fill="darkorange"/>
                    </graphic>
                </Button>
            </VBox>
        </ScrollPane>

    </left>

    <center>
        <VBox style="-fx-background-color:F5821C;">
            <HBox spacing="15">
                <HBox prefWidth="430" alignment="CENTER_LEFT">
                <Label fx:id="nombreCategoria"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="btnAgregar" text="Agregar libro" contentDisplay="TOP" style="-fx-border-color: transparent;">
                        <graphic>
                            <FontAwesomeIconView glyphName="PLUS_CIRCLE" glyphSize="40" fill="limegreen"/>
                        </graphic>
                    </Button>

                    <Button fx:id="btnVerSugerencias" text="Sugerencias" contentDisplay="TOP" style="-fx-border-color: transparent;">
                        <graphic>
                            <FontAwesomeIconView glyphName="NEWSPAPER_ALT" glyphSize="40" fill="blue"/>
                        </graphic>

                    </Button>
                    <Button fx:id="btnBusqueda" contentDisplay="GRAPHIC_ONLY" style="-fx-background-color:transparent; -fx-border-color: transparent;" >
                        <graphic>
                            <FontAwesomeIconView glyphName="SEARCH" glyphSize="25" fill="gray"/>
                        </graphic>
                    </Button>
                    <TextField fx:id="txtBuscar" promptText="Buscar libro">

                    </TextField>
                </HBox>

            </HBox>
            <ScrollPane fx:id="scrollLibros" prefWidth="900" prefHeight="600" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                <GridPane fx:id="GPCatalogo" prefHeight="600.0" prefWidth="1100.0" style="-fx-background-color:#F3ECE6;" alignment="CENTER">
                    <Label text="Seleccione una categoria para ver los libros" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill:#524942;"/>
                </GridPane>

            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
